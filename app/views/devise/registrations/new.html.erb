<div class="row">
  <div class="col-md-6">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-horizontal', role: 'form') do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email, "邮箱", class: 'control-label' %>
        <%= f.email_field :email, autofocus: true, class: 'form-control'  %>
      </div>

      <div class="form-group">
        <%= f.label :password, "密码", class: 'control-label'  %>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "确认密码", class: 'control-label'  %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'  %>
      </div>

      <div class="form-group">
        <%= f.submit "确定", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
