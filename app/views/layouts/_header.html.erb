<header>
  <div class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container"> <!-- 少这层这个导航条宽度是全屏 -->
      <div class="navbar-header"></div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav" >
          <li class="dropdown">
            <%= link_to 'javascript;', class: 'dropdown-toggle', role: 'button', data: { toggle: 'dropdown' }, aria: { haspopup: 'true', expanded: 'false'} do %>
              上传下载<span class="caret"></span>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to '下载', 'javascript;' %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to '图片上传', pictures_path %></li>
              <li><%= link_to '文档上传', documents_path %></li>
              <li><%= link_to '音频上传', audios_path %></li>
            </ul>
          </li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li><%= link_to current_user.name, profile_path %></li>
            <li><%= link_to "退出", destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "登录", new_user_session_path %></li>
            <li><%= link_to "注册", new_user_registration_path %></li>
          <% end %>
          <i class="fa fa-gear"></i>
        </ul>
      </div>
    </div>
  </div>
</header>